{
  "manifest_version": 3,
  "name": "Vincent van Birb",
  "version": "1.3.3",
  "description": "A color picker for Holidu websites",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "*://*.holidu.com/*",
    "*://holidu.com/*",
    "*://*.holidu.de/*",
    "*://*.holidu.fr/*",
    "*://*.holidu.ie/*",
    "*://*.holidu.co.uk/*",
    "*://*.holidu.es/*",
    "*://*.holidu.it/*",
    "*://*.holidu.nl/*",
    "*://*.holidu.be/*",
    "*://*.holidu.at/*",
    "*://*.holidu.ch/*",
    "*://*.holidu.pl/*",
    "*://*.holidu.cz/*",
    "*://*.holidu.sk/*",
    "*://*.holidu.hu/*",
    "*://*.holidu.ro/*",
    "*://*.holidu.bg/*",
    "*://*.holidu.gr/*",
    "*://*.holidu.pt/*",
    "*://*.holidu.se/*",
    "*://*.holidu.no/*",
    "*://*.holidu.fi/*",
    "*://*.holidu.dk/*",
    "*://*.ferienwohnungen.de/*",
    "*://ferienwohnungen.de/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.holidu.com/*",
        "*://holidu.com/*",
        "*://*.holidu.de/*",
        "*://*.holidu.fr/*",
        "*://*.holidu.ie/*",
        "*://*.holidu.co.uk/*",
        "*://*.holidu.es/*",
        "*://*.holidu.it/*",
        "*://*.holidu.nl/*",
        "*://*.holidu.be/*",
        "*://*.holidu.at/*",
        "*://*.holidu.ch/*",
        "*://*.holidu.pl/*",
        "*://*.holidu.cz/*",
        "*://*.holidu.sk/*",
        "*://*.holidu.hu/*",
        "*://*.holidu.ro/*",
        "*://*.holidu.bg/*",
        "*://*.holidu.gr/*",
        "*://*.holidu.pt/*",
        "*://*.holidu.se/*",
        "*://*.holidu.no/*",
        "*://*.holidu.fi/*",
        "*://*.holidu.dk/*",
        "*://*.ferienwohnungen.de/*",
        "*://ferienwohnungen.de/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 